{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		//Do I need this?
		"allowImportingTsExtensions": true,
		"allowUnusedLabels": false,
		"baseUrl": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"paths": {
			"@actor": ["types/src/module/actor/index.js"],
			"@actor/*": ["types/src/module/actor/*"],
			"@item": ["types/src/module/item/index.js"],
			"@item/*": ["types/src/module/item/*"],
			"@module/*": ["types/src/module/*"],
			"@scene": ["types/src/module/scene/index.js"],
			"@scene/*": ["types/src/module/scene/*"],
			"@scripts/*": ["types/src/scripts/*"],
			"@system/*": ["types/src/module/system/*"],
			"@util": ["types/src/util/index.js"],
			"@util/*": ["types/src/util/*"],
			//			"foundryvtt-devMode": ["src/types/devMode.js"],
			//			"foundryvtt-devMode": ["src/types/devMode.js"],
			//			"devMode": ["src/types/foundryvtt-devMode/devMode.js"]
			"styles/*": ["src/styles/*"],
			"@static/*": ["static/*"]
		},
		"removeComments": false,
		"resolveJsonModule": true,
		"rootDir": ".",
		"skipLibCheck": true,
		"sourceMap": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": false,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"target": "es2022",
		"typeRoots": [
			"node_modules/@types",
			"types/types/foundry",
			"types/types/dev-mode",
			"types/types/libWrapper",
			"types/types/socketlib"
		],
		"types": ["jquery", "node", "tooltipster"],
		"useDefineForClassFields": true,
		"noErrorTruncation": true
		//		"allowJs": true
	},
	"watchOptions": {
		"excludeDirectories": ["packs/data/", "static/packs/"]
	},
	"exclude": ["types/types/foundry/**/*"]
}
